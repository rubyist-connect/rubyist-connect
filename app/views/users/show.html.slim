.col-sm-6.col-md-4
  = image_tag @user.image, class: 'img-circle', size: '150x150'
  br
  = @user.name_or_nickname
  br
  = display_age(@user)
  br
  - year, month = @user.rubyist_year_month
  = t(".year_month", year: year, month: month) if [year, month].all?(&:present?)
  br
  - if @user.location.present?
    i.fa.fa-map-marker = @user.location
    br
  - if @user.blog.present?
    h6
      i.fa.fa-bookmark-o = link_to @user.blog, @user.blog, target: '_blank'
    br
  = render 'sns_links', user: @user
  h2 = link_to 'タグ一覧' , interests_path
  table.interests
    - @user.interests.each do |interest|
      tr
        td = link_to_if interest.content_url.present?, interest.content, interest.content_url, target: '_blank'
.col-sm-6.col-md-8
  .well
    = markdown_to_html(@user.introduction)
